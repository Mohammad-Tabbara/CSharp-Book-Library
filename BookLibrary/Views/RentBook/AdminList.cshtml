@model IEnumerable<BookLibrary.Models.Book>

@{
    ViewBag.Title = "AdminList";
}

<h2>AdminList</h2>

<p>
    @Html.ActionLink("Student List", "../Student/Index") | @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped" style="width:100%">
    <tr>
        <th>
            Student Email:
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back", "Index")
</div>