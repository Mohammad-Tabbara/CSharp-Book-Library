@model IEnumerable<BookLibrary.Models.Book>

@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-1.7.2.js"></script>
<script src="~/Scripts/DataTable.js"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/DataTables/css/jquery.dataTables.css">
<h2>Index</h2>

<table id="example" class="display" cellspacing="0" width="100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentPrice)
        </td>
        @{
            if (item.ApplicationUserId != null)
            {
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Rent", "Book", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            }
        }
        
    </tr>
}

    @Html.ActionLink("Administrator List", "AdminList")

</table>
